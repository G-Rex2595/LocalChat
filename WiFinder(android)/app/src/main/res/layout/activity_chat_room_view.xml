<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ChatRoomView"
    android:background="#2bee1d">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/txtChatDisplay"
        android:background="#fefbfb"
        android:enabled="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtMessageInput"
        android:layout_alignEnd="@+id/txtMessageInput"
        android:layout_above="@+id/txtMessageInput"
        android:autoText="false"
        android:layout_marginBottom="5dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:gravity="left|bottom"
        android:scrollbars="vertical"
        android:textSize="20dp"
        android:textColor="@android:color/black" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/txtMessageInput"
        android:text="Message Here"
        android:textColor="#FF888888"
        android:background="#f9f6f6"
        android:lines="2"
        android:clickable="false"
        android:editable="true"
        android:elegantTextHeight="false"
        android:enabled="true"
        android:inputType="text"
        android:textSize="25dp"
        android:allowUndo="true"
        android:width="300dp"
        android:layout_alignTop="@+id/btnSendMessage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:contextClickable="false" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/btnSendMessage"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtMessageInput"
        android:layout_alignEnd="@+id/txtMessageInput"
        android:onClick="btnSendMessage_Click"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="true"
        android:enabled="true" />

</RelativeLayout>
